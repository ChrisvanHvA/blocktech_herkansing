<header>
    {{>navBar}}
    {{!-- warning zorgt ervoor dat je niet de app probeert te gebruiken op een mobile device --}}
    {{>warning}}
</header>
<main>
    <article class="sideBar">
        {{>filter}}
    </article>
    <article>
        {{!-- de if/else statement kijkt of je matches hebt, zo niet dan veranderd de pagina om je te spotten en tips te geven. --}}
        {{#if isMatched}}
        {{>matchPopup}}
        {{/if}}
        {{#if data.length}}
        <section>
            {{>largeCard}}
        </section>
        {{>likeDislike}}
        {{else}}
        <section class="funnyQuote">

            <h1>Damn, a bit too specific perhaps?</h1>

        </section>
        {{/if}}

    </article>
</main>
{{>background}}