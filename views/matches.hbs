<header>
    {{>navBar}}
{{!-- warning zorgt ervoor dat je niet de app probeert te gebruiken op een mobile device --}}
    {{>warning}}
</header>

<main class="matchMain">

    <article class="sideBar">
        <article class="title">
            <img class="icon" src="images/placeholder_icon.png" alt="">
            <h1 class="matchesTitle">Matches</h1>

        </article>
{{!-- de if/else statement kijkt of je matches hebt, zo niet dan veranderd de pagina om je te spotten en tips te geven. --}}
        {{#if data.length}}
        <ul>

            {{>matchInfo}}
            {{>form}}
        </ul>
        {{else}}
        {{>infoEmpty}}
        {{/if}}


    </article>
    <article>

        {{#if data.length}}

        <ul class="smallCards">
            <li> {{>smallCard}} </li>
        </ul>

        {{else}}
        {{>quote}}
        {{/if}}

        <div id="shadowBox"></div>
    </article>

</main>
{{>background}}
<script src="/public/js/matchinteraction.js"></script>;